<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|fill_vertical"
        android:background="@color/background_main"
        android:maxWidth="500dp">

        <TextView
            android:id="@+id/lbltitle"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/primary_brand"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/vendor"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_marginTop="96dp"
            android:spinnerMode="dialog"
            app:backgroundTint="@color/text_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vendorborder"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toBottomOf="@+id/vendor"
            app:layout_constraintEnd_toEndOf="@+id/vendor"
            app:layout_constraintStart_toStartOf="@+id/vendor"
            app:layout_constraintTop_toTopOf="@+id/vendor" />

        <TextView
            android:id="@+id/lblvendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/hint_background"
            android:includeFontPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/vendor"
            android:textColor="@color/primary_brand"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/vendorborder"
            app:layout_constraintStart_toStartOf="@+id/vendorborder"
            app:layout_constraintTop_toTopOf="@+id/vendorborder" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_vendor"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="280dp"
            android:layout_height="58dp"
            android:layout_marginTop="-4dp"
            android:hint="@string/vendor"
            app:boxBackgroundColor="@color/background_alt"
            android:textColorHint="@color/primary_brand"
            android:visibility="invisible"
            app:boxStrokeColor="@color/input_border_color"
            app:expandedHintEnabled="false"
            app:hintAnimationEnabled="false"
            app:layout_constraintEnd_toEndOf="@+id/vendorborder"
            app:layout_constraintStart_toStartOf="@+id/vendorborder"
            app:layout_constraintTop_toTopOf="@+id/vendorborder" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtvendor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:digits="@string/alphanumeric"
                android:inputType="textNoSuggestions"
                android:maxLength="10"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/text_main" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/chkvendor"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:text="@string/can_t_find_vendor_i_want"
            android:textColor="@color/text_main"
            app:layout_constraintStart_toStartOf="@+id/vendor"
            app:layout_constraintTop_toBottomOf="@+id/layout_vendor" />

        <Spinner
            android:id="@+id/type"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_marginTop="50dp"
            android:spinnerMode="dialog"
            app:backgroundTint="@color/text_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vendor" />

        <View
            android:id="@+id/typeborder"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toBottomOf="@+id/type"
            app:layout_constraintEnd_toEndOf="@+id/type"
            app:layout_constraintStart_toStartOf="@+id/type"
            app:layout_constraintTop_toTopOf="@+id/type" />

        <TextView
            android:id="@+id/lbltype_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/hint_background"
            android:includeFontPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/type"
            android:textColor="@color/primary_brand"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/typeborder"
            app:layout_constraintStart_toStartOf="@+id/typeborder"
            app:layout_constraintTop_toTopOf="@+id/typeborder" />

        <Spinner
            android:id="@+id/subtype"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"
            android:spinnerMode="dialog"
            app:backgroundTint="@color/text_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type" />

        <View
            android:id="@+id/subtypeborder"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toBottomOf="@+id/subtype"
            app:layout_constraintEnd_toEndOf="@+id/subtype"
            app:layout_constraintStart_toStartOf="@+id/subtype"
            app:layout_constraintTop_toTopOf="@+id/subtype" />

        <TextView
            android:id="@+id/lblsubtype_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/hint_background"
            android:includeFontPadding="false"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/subtype"
            android:textColor="@color/primary_brand"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/subtypeborder"
            app:layout_constraintStart_toStartOf="@+id/subtypeborder"
            app:layout_constraintTop_toTopOf="@+id/subtypeborder" />


        <LinearLayout
            android:id="@+id/row_ext"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtype">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_extmin"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundColor="@color/background_alt"
                android:textColorHint="@color/primary_brand"
                app:boxStrokeColor="@color/input_border_color"
                android:hint="@string/extruder_min"
                app:expandedHintEnabled="false"
                app:hintAnimationEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtextmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/numeric"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/text_main" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_extmax"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:boxBackgroundColor="@color/background_alt"
                android:textColorHint="@color/primary_brand"
                app:boxStrokeColor="@color/input_border_color"
                android:hint="@string/extruder_max"
                app:expandedHintEnabled="false"
                app:hintAnimationEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtextmax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/numeric"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/text_main" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_bed"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/row_ext">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_bedmin"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundColor="@color/background_alt"
                android:textColorHint="@color/primary_brand"
                app:boxStrokeColor="@color/input_border_color"
                android:hint="@string/bed_min"
                app:expandedHintEnabled="false"
                app:hintAnimationEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtbedmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/numeric"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/text_main" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_bedmax"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:boxBackgroundColor="@color/background_alt"
                android:textColorHint="@color/primary_brand"
                app:boxStrokeColor="@color/input_border_color"
                android:hint="@string/bed_max"
                app:expandedHintEnabled="false"
                app:hintAnimationEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtbedmax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/numeric"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/text_main" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_container"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/row_bed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:textColor="@color/text_inverted"
                android:id="@+id/btncls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:layout_marginEnd="40dp"
                android:text="@string/cancel"
                android:textSize="16sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:textColor="@color/text_inverted"
                android:id="@+id/btnsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:padding="14dp"
                android:text="@string/add"
                android:textSize="16sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>